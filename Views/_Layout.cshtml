@inherits UmbracoViewPage<PageViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

  @{
     await Html.RenderPartialAsync("Head");
  }

<body>
    @{
        await Html.RenderPartialAsync("Header", UmbracoContext.PublishedRequest.PublishedContent);
    }

    @RenderBody()

    <!-- Back to Top Button -->
    <button class="back-to-top" aria-label="Back to top">
        ↑
    </button>

    @{
        await Html.RenderPartialAsync("Footer");
    }

    <!-- External JavaScript -->
    <script src="/scripts.js"></script>
</body>

</html>