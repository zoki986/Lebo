@using Lebo.BackOffice.Controllers.Surface
@{
    Layout = "_Layout.cshtml";
}

<main>
    <section class="section">
        <div class="container">
            <div class="contact-content">
                <div class="contact-info">
                    <h2>Get In Touch</h2>
                    <p>
                        Ready to capture your vision? I'd love to hear about your project and discuss how we can
                        create stunning photography together. Whether it's food photography for your restaurant,
                        professional portraits, or commercial work, let's bring your ideas to life.
                    </p>

                    <div class="contact-details">
                        <h3>Contact Information</h3>
                        <div class="contact-item">
                            <strong>Email:</strong>
                            <a href="mailto:bojanalemic@gmail.com">bojanalemic@gmail.com</a>
                        </div>
                        <div class="contact-item">
                            <strong>Location:</strong>
                            <span>Novi Sad, Serbia / Dubai, UAE</span>
                        </div>
                        <div class="contact-item">
                            <strong>Region:</strong>
                            <span>Vojvodina, Serbia</span>
                        </div>
                    </div>

                    <p>
                        I'm currently based between Novi Sad, Serbia and Dubai, UAE, and I'm available for
                        projects in both locations as well as travel assignments. Feel free to reach out to
                        discuss your photography needs.
                    </p>
                </div>

                <div class="contact-form">

                    @if (TempData["ContactMessageSuccess"] is bool)
                    {
                        <h3>Thank you for your message.</h3>
                    }
                    else
                    {

                        <h3>Send a Message</h3>
                        @using (Html.BeginUmbracoForm<ContactController>("Submit", FormMethod.Post, new { @class = "contact-form_form", aria_label = "Contact form" }))
                        {
                            @Html.ValidationSummary(excludePropertyErrors: true)

                            <div class="form-group">
                                <div class="contact-form_label-wrap">
                                    <label for="name" class="contact-form_field-label">Name*</label>
                                </div>
                                <input class="contact-form_field w-input" id="name" name="Name" required />
                                @Html.ValidationMessage("Name")
                            </div>

                            <div class="form-group">
                                <div class="contact-form_label-wrap">
                                    <label for="Email" class="contact-form_field-label">Email Address*</label>
                                </div>
                                <input class="contact-form_field w-input" id="Email" name="Email" type="email" required />
                                @Html.ValidationMessage("Email")
                            </div>

                            <div class="form-group">
                                <div class="contact-form_label-wrap">
                                    <label for="Message" class="contact-form_field-label">Message*</label>
                                </div>
                                <textarea class="contact-form_field is-message w-input" placeholder="Tell me about your project..." id="Message" name="Message" required></textarea>
                                @Html.ValidationMessage("Message")
                            </div>

                            <!-- Honeypot: hide via CSS, not type="hidden" -->
                            <div style="position:absolute;left:-5000px" aria-hidden="true">
                                <label for="website">Leave this empty</label>
                                <input type="text" id="website" name="Website" tabindex="-1" autocomplete="off" />
                            </div>

                            <!-- Time trap -->
                            <input type="hidden" name="FormRenderedAt" value="@DateTimeOffset.UtcNow.ToUnixTimeMilliseconds()" />
                            <button type="submit" class="btn">Send Message</button>
                        }
                    }

                </div>
            </div>
        </div>
    </section>
</main>